

@model NotaMarket.UI.Models.Dtos.InstrumentTypeDtos.CreateInstrumentTypeDto

@{
    Layout = "_AdminLayout";
}

<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12">
            <h1>Enstürman Tipi Oluştur</h1>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="header">
                <h2>Enstürman Tipi</h2>
            </div>
            <div class="body">
                <form method="post" enctype="multipart/form-data" id="instrumentType-create-form" data-parsley-validate novalidate>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend"></div>
                        <input type="text" class="form-control" placeholder="Enstürman Tipi Adı" aria-label="InstrumentTypeName" ariadescribedby="basic-addon1" asp-for="InstrumentTypeName" required data-parsley-required>
                    </div>
                    <div class="input-group mb-3">
                        <div class="card">
                            <div class="body">
                                <input type="file" class="dropify formFile" asp-for="FormFile" data-allowed-file-extensions="jpg png jpeg">
                            </div>
                        </div>
                    </div>
                    <div class=" text-right hidden-xs">
                        <button type="submit" asp-controller="AdminInstrumentType" asp-action="CreateUpload" class="btn btn-sm btn-primary" title="">Oluştur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

