@model List<NotaMarket.UI.Models.Dtos.InstrumentTypeDto>

@{
    Layout = "_AdminLayout";
    int i = 1;
}

<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12">
            <h1>Enstürman  Tipi Listesi</h1>
        </div>
        <div class="col-md-6 col-sm-12 text-right hidden-xs">
            <a asp-controller="AdminInstrumentType" asp-action="Create" class="btn btn-sm btn-primary" title="">Enstürmant Tipi Oluştur</a>
        </div>
    </div>
</div>

<div class="row clearfix">

    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2>Enstürman tipi</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Adı</th>
                                <th>Url</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Adı</th>
                                <th>Url</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Id</td>
                                    <td>@item.InstrumentTypeName</td>
                                    <td>@item.PhotoUrl</td>
                                    <td>
                                        <button href="javascript:void(0);" class="btn btn-sm btn-primary" title="">Güncelle</button>
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                           title="" 
                                           asp-controller="AdminInstrumentType" 
                                           asp-action="DeleteInstrumentType" 
                                           onclick="return confirm('Are you sure to delete this record?')">Sil</button>
                                    </td>

                                </tr>
                                i++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
