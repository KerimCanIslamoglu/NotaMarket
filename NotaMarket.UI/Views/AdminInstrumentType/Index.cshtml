@model List<NotaMarket.UI.Models.Dtos.InstrumentTypeDtos.InstrumentTypeDto>

@{
    Layout = "_AdminLayout";
    int i = 1;
}


<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12">
            <h1>Enstürman  Tipi Listesi</h1>
        </div>
        <div class="col-md-6 col-sm-12 text-right hidden-xs">
            <a asp-controller="AdminInstrumentType" asp-action="Create" class="btn btn-sm btn-primary" title="">Enstürmant Tipi Oluştur</a>
        </div>
    </div>
</div>

<div class="row clearfix">

    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2>Enstürman tipi</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover dataTable ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Adı</th>
                                <th>Fotoğraf</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Adı</th>
                                <th>Fotoğraf</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Id</td>
                                    <td>@item.InstrumentTypeName</td>
                                    <td><img style="height:50px;width:50px" src="@item.Image" alt="@item.InstrumentTypeName" /></td>
                                    <td>

                                        <a class="btn btn-sm btn-primary"
                                           title=""
                                           asp-controller="AdminInstrumentType"
                                           asp-action="UpdateInstrumentType"
                                           asp-route-id="@item.Id">Güncelle</a>

                                        <a class="btn btn-sm btn-danger"
                                           title=""
                                           asp-controller="AdminInstrumentType"
                                           asp-action="DeleteInstrumentType"
                                           asp-route-id="@item.Id">Sil</a>

                                    </td>

                                </tr>
                                i++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

