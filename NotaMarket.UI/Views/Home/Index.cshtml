@model NotaMarket.UI.Models.Dtos.HomeDtos.HomePageDto

@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner -->
<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
        <div class="row">


            @if (Model.InstrumentModels.Count > 0)
            {
                @foreach (var item in Model.InstrumentModels)
                {
                    <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                        <!-- Block1 -->
                        <div class="block1 wrap-pic-w">
                            <img src="~/images/banner-01.jpg" alt="IMG-BANNER">

                            <a href="product.html" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                                <div class="block1-txt-child1 flex-col-l">
                                    <span class="block1-name ltext-102 trans-04 p-b-8">
                                        @item.InstrumentName
                                    </span>

                                    <span class="block1-info stext-102 trans-04">
                                        @item.InstrumentTypeName
                                    </span>
                                </div>

                                <div class="block1-txt-child2 p-b-4 trans-05">
                                    <div class="block1-link stext-101 cl0 trans-09">
                                        Listele
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>

                }
            }
        </div>
    </div>
</div>


<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                En son eklenenler
            </h3>
        </div>

        <div class="row isotope-grid">

            @if (Model.SheetMusicModels.Count > 0)
            {
                @foreach (var item in Model.SheetMusicModels)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img src="images/product-01.jpg" alt="IMG-PRODUCT">

                                <a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                    Detay
                                </a>
                            </div>

                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        @item.SheetMusicName
                                    </a>

                                    <span class="stext-105 cl3">
                                        @(item.Description.Length>25?item.Description.Substring(0,30)+"...":item.Description)
                                    </span>
                                </div>

                                <div class="block2-txt-child2 flex-r p-t-3">
                                    <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                        <img class="icon-heart1 dis-block trans-04" src="~/images/icons/icon-heart-01.png" alt="ICON">
                                        <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/images/icons/icon-heart-02.png" alt="ICON">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>

        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45">
            <a asp-controller="SheetMusic" asp-action="Index" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Hepsini görüntüle
            </a>
        </div>
    </div>
</section>